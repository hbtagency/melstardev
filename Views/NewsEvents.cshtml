@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Layout.cshtml";
    var newsEvent = Umbraco.Content(1067);
}   
<script type="text/javascript" src="/js/project/postAngularController.js"></script>


            <div class="box-center-container clearfix right-side parallax-banner" style="background:url('/img/banner1.jpg') no-repeat;background-size:cover;">
                @Html.Partial("_top_nav")
                @Html.Partial("_main_nav")
                <div id="navplacehoder" class="navplacehoder hidden">
                </div>
                <!-- Banner area -->
                <div class="banner_area">
                    <div class="mask"></div>
                    <div class="banner-heading sit_left clearfix">
                        <h1>
                            Tickets and Pricing
                        </h1>
                        <p>Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit...</p>
                    </div>
                </div>
                <!-- End of Banner -->
            </div>
            <div class="right-bar box-sidebar pull-right"></div>
        </div>
    </header>

    
    <div ng-app="mainApp" class="container template_content">
        <div ng-controller="postController">
        <div class="row">
            <div class="col-lg-1 visible-lg">
            </div>
            <div class="col-xs-12 col-lg-10">
                <nav class="centered_nav_area clearfix">
                    <ul class="centered_list_nav">
                        <li class="first"><a ng-click="selectCat('')">All</a></li>

                        @{
                            foreach (var c in newsEvent.Children())
                            {
                                <li><a href="#" ng-click="selectCat(@c.Id)">@c.pageTitle</a></li>
                            }
                        }
                    </ul>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-1 visible-lg">
            </div>
            <div class="col-xs-12 col-lg-10 three-column-container">
                <div class="row">
                   
                    <div ng-repeat="obj in posts | filter: {categoryID:search.categoryID}">
                        <div class="post_list_item col-lg-4 col-sm-6 col-xs-12">
                            <a href="{{obj.url}}"><img src="{{obj.featuredImage}}" class="img-responsive" /></a>
                            <a href="{{obj.url}}"><h2>{{obj.title}}</h2></a>
                            <a class="whats_on" href="#" ng-click="search.categoryID = '1071'">{{obj.categoryName}}</a>
                            <p>
                               {{obj.subtitle}}
                            </p>
                        </div>
                        <div ng-if="($index+1)%3 == 0" class="clear"></div>
                    </div>
            
                </div> 
            </div>


        </div>
            </div>
    </div>


    <script type="text/javascript" src="/js/project/banner_mask_height_init.js"></script>
