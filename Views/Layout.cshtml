@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="@Umbraco.GetDictionaryValue("Description")">
    <meta name="keywords" content="@Umbraco.GetDictionaryValue("Keywords")">
    <meta name="author" content="@Umbraco.GetDictionaryValue("Author")">

    <title> @Umbraco.Field("pageTitle") </title>
    <link rel="stylesheet" href="/css/final/style.css" />

    <!-- JS init -->
    <script type="text/javascript" src="/js/jquery/jquery-2.1.4.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap/bootstrap.min.js"></script>
    
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.1/angular.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.1/angular-animate.js"></script>

</head>

<body>
    <header>
    <div id="body-mask" class="body-mask">
    </div>
    <div id="search-mask" class="body-mask">
        <div id="search-close-button"><a id="mask_close_button" href="#"><img src="/img/icon-close.png" /></a></div>

        <script type="text/javascript" src="/js/project/angular/searchAngularController.js"></script>
        <!--search-->
        <div class="search-box" ng-app="searchModule">
            <div class="search-box-container" ng-controller="searchController">
                <div class="search-box-input inline-block">
                    Search: 
                </div>
                <input id="search-input-box" class="search-input inline-block" type="search" ng-model="q" placeholder="Click to search..." />
                <ul class="example-animate-container">
                    <li ng-animate="'animate'" class="animate-repeat" ng-if="q.length > 0" ng-repeat="page in pages | filter:q as results">
                        [{{$index + 1}}] <a href="{{page.url}}">{{page.title}}</a>
                    </li>
                    <li class="animate-repeat" ng-if="results.length == 0">
                        <strong>No results found...</strong>
                    </li>
                </ul>

            </div>
        </div>
        
        <!--End of search-->
    </div>
    <!-- Load mobile nav which should only be displayed in Mobile and Tab view-->
    @Html.Partial("_mobile_nav")   
    <!-- Load extra nav which hides in left side of box container. -->
    @Html.Partial("_extra_nav")
         
    @RenderBody()
    
    

    @Html.Partial("_footer")
    

</body>
</html>
